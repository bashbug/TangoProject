<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" >

    <android.opengl.GLSurfaceView
        android:id="@+id/gl_surface_view"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_gravity="top"
        android:layout_alignParentTop="true" />

    <CheckBox
        android:id="@+id/single_frame_opt_checkbox"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="single frame optimized"
        android:checked="false"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"/>
    <CheckBox
        android:id="@+id/multi_frame_opt_checkbox"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="multi frame optimized"
        android:checked="false"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="2dp"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/single_frame_opt_checkbox"/>
    <CheckBox
        android:id="@+id/unopt_checkbox"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="unoptimized"
        android:checked="false"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="2dp"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/multi_frame_opt_checkbox"/>
    <Button
        android:id="@+id/first_person_button"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:layout_marginRight="5dp"
        android:paddingRight="5dp"
        android:text="@string/scan_mode"
        android:layout_above="@+id/third_person_button"
        android:layout_alignParentEnd="true"/>
    <Button
        android:id="@+id/third_person_button"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:layout_marginRight="5dp"
        android:paddingRight="5dp"
        android:text="@string/model_mode"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignStart="@+id/first_person_button"/>

    <Button
        android:id="@+id/optimize_pose_graph_button"
        android:layout_width="115dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:text="@string/optimize"
        android:layout_above="@+id/save_pcd_button"
        android:layout_alignParentStart="true"/>
    <Button
        android:id="@+id/save_pcd_button"
        android:layout_width="115dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:text="@string/save"
        android:layout_above="@+id/range_seekbar"
        android:layout_alignParentStart="true"/>

    <SeekBar
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:id="@+id/range_seekbar"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:max="200"
        android:progress="100"
        android:indeterminate="false" />

    <ToggleButton
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:id="@+id/start_stop_button"
        android:checked="false"
        style="@style/toggleButton"
        android:background="@drawable/apptheme_btn_radio_holo_light"
        android:onClick="onToggleClick"
        android:layout_centerInParent="true"
        android:layout_above="@+id/first_person_button"
        android:layout_alignParentEnd="true"/>
</RelativeLayout>
