<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" >

    <android.opengl.GLSurfaceView
        android:id="@+id/gl_surface_view"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_gravity="top"
        android:layout_alignParentTop="true" />
    <SeekBar
        android:id="@+id/depth_overlay_alpha_seekbar"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:max="100"
        android:progress="50"
        android:indeterminate="false"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"/>
    <Button
        android:id="@+id/save_image"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginRight="5dp"
        android:paddingRight="5dp"
        android:text="@string/save_image"
        android:layout_above="@+id/save_pcl_switch"
        android:layout_alignParentEnd="true"/>
    <Switch
        android:id="@+id/save_pcl_switch"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Save PCD"
        android:checked="false"
        android:layout_above="@+id/send_pcl_switch"
        android:layout_alignParentEnd="true"/>
    <Switch
        android:id="@+id/send_pcl_switch"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Send PCD"
        android:checked="false"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"/>
    <CheckBox
        android:id="@+id/depth_map_checkbox"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="depth map"
        android:checked="false"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"/>
    <CheckBox
        android:id="@+id/rgb_map_checkbox"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="rgb map"
        android:checked="false"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="2dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"/>
</RelativeLayout>
