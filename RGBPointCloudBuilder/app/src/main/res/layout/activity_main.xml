<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" >

    <android.opengl.GLSurfaceView
        android:id="@+id/gl_surface_view"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_gravity="top"
        android:layout_alignParentTop="true" />

    <Button
        android:id="@+id/first_person_button"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:layout_marginRight="5dp"
        android:paddingRight="5dp"
        android:text="@string/scan_mode"
        android:layout_above="@+id/third_person_button"
        android:layout_alignParentEnd="true"/>
    <Button
        android:id="@+id/third_person_button"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:layout_marginRight="5dp"
        android:paddingRight="5dp"
        android:text="@string/model_mode"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignStart="@+id/first_person_button"/>
    <Button
        android:id="@+id/start_pcd_button"
        android:layout_width="115dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:text="@string/start"
        android:layout_above="@+id/stop_pcd_button"
        android:layout_alignParentStart="true"/>
    <Button
        android:id="@+id/stop_pcd_button"
        android:layout_width="115dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:text="@string/stop"
        android:layout_above="@+id/optimize_pose_graph_button"
        android:layout_alignParentStart="true"/>
    <Button
        android:id="@+id/optimize_pose_graph_button"
        android:layout_width="115dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:text="@string/optimize"
        android:layout_above="@+id/save_pcd_button"
        android:layout_alignParentStart="true"/>
    <Button
        android:id="@+id/save_pcd_button"
        android:layout_width="115dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:text="@string/save"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"/>
</RelativeLayout>
